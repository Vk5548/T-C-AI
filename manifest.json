{
    "manifest_version": 3,
    "name": "T&C-AI",
    "version": "1.0",
    "background": {
        "service_worker": "./background-script/pkg/background_script.js",
        "persistent": true
    },
    "description": "A Chrome extension to parse and analyze terms and conditions.",
    "permissions": [
        "activeTab",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "https://*/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "./foreground-script/pkg/foreground_script.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "background-script/pkg/*.wasm",
                "foreground-script/pkg/*.wasm"
            ],
            "matches": [
                "<all_urls>",
                "https://*/*"
            ],
            "extension_ids": []
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {}
    }
}